<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true">
    <testsuites>
        <testsuite name="Unit">
            <directory>tests/Unit</directory>
        </testsuite>
        <testsuite name="Feature">
            <directory>tests/Feature</directory>
        </testsuite>
    </testsuites>
    <source>
        <include>
            <directory>src</directory>
        </include>
        <exclude>
            <!-- Service Providers - Configuration/bootstrapping only -->
            <file>src/Providers/RpcServerServiceProvider.php</file>
            
            <!-- Abstract Base Classes - No concrete implementation to test -->
            <file>src/Routing/AbstractProcedureCollection.php</file>
            <file>src/Rpc/Procedures/ProcedureController.php</file>
            
            <!-- Pure Interfaces/Contracts - No implementation logic -->
            <directory>src/Interfaces</directory>
            
            <!-- Facades - Proxies to actual implementations (optional exclusion) -->
            <file>src/Support/Facades/RPC.php</file>
            <file>src/Support/Facades/MakeProcedureCallResult.php</file>
        </exclude>
    </source>
    <coverage>
        <report>
            <html outputDirectory="tests/coverage" lowUpperBound="50" highLowerBound="80"/>
            <clover outputFile="tests/coverage.xml"/>
            <text outputFile="php://stdout" showUncoveredFiles="true" showOnlySummary="false"/>
        </report>
    </coverage>
    <php>
        <env name="APP_ENV" value="testing"/>
        <env name="CACHE_DRIVER" value="array"/>
        <env name="SESSION_DRIVER" value="array"/>
        <env name="QUEUE_DRIVER" value="sync"/>
        <env name="DB_CONNECTION" value="sqlite"/>
        <env name="DB_DATABASE" value=":memory:"/>
    </php>
</phpunit>
